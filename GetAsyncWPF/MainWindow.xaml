<Window x:Class="GetAsyncWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox x:Name="textbox" Width="450" Height="230" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20"></TextBox>
        <Button Content="GETASYNC" x:Name="getbtn" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="35,0,0,10" BorderBrush="Aqua" Background="Bisque" Click="getClick"></Button>
        <Button Content="POSTASYNC" x:Name="postbtn" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10" BorderBrush="Aqua" Background="Bisque" Click="postClick"></Button>
        <Button Content="PUTASYNC" x:Name="putbtn" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,35,10" BorderBrush="Aqua" Background="Bisque" Click="putClick"></Button>
    </Grid>
</Window>
